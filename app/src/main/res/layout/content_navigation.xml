<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/content_navigation"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dorvis.quizapp.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

    <View
        android:id="@+id/viewlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </View>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp"
            android:textAlignment="center"
            android:textDirection="inherit"
            android:visibility="visible">


            <Button
                android:id="@+id/dailyquiz_buttton"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/circle"
                android:drawableTop="@android:drawable/ic_dialog_email"
                android:paddingTop="20dp"
                android:text="@string/daily_quiz"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff" />


            <Button
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@android:drawable/ic_dialog_email"
                android:paddingTop="20dp"
                android:text="Interview"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff" />

            <Button
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:drawableTop="@android:drawable/ic_dialog_info"
                android:paddingTop="20dp"
                android:text="Tech News"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#fff" />

        </LinearLayout>


    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="welcome" />

           </FrameLayout>



    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/framelayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="27dp"
                android:text="Android" />


        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/framelayout"
        android:layout_marginTop="5dp"
        android:elevation="5dp">


        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/iconandroid9"

            />



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView2"
        android:id="@+id/cardView3">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/javaicon9" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Java"
            />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView3"
        android:id="@+id/cardView4">

        <ImageView
            android:background="@drawable/circle"
            android:src="@drawable/logo"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:text="python"
            />



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardView3">

    <ImageView

        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/iconpython"
        />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:text="Python"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cardView4">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/iconcprogram"

            />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            android:text="C"
            />


    </android.support.v7.widget.CardView>


</RelativeLayout>
