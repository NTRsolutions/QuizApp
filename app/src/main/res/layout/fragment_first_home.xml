<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dorvis.quizapp.fragments.FirstHomeFragment"
    android:padding="10dp"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingTop="13dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/circle"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_event_dailyquiz_black_24dp"
            android:id="@+id/dq_imageView" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:gravity="center"
            android:layout_alignLeft="@+id/dq_imageView"
            android:layout_alignStart="@+id/dq_imageView"
            android:layout_alignTop="@+id/textView4"
            android:padding="2dp"
            android:text="Daily Quiz" />

        <ImageView
            android:id="@+id/interview_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingTop="13dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_interview_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/dq_imageView"
            android:layout_toRightOf="@+id/dq_imageView" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:text="Interview"
            android:textSize="10dp"
            android:gravity="center"
            android:layout_alignLeft="@+id/interview_img"
            android:layout_alignStart="@+id/interview_img"
            android:layout_below="@+id/interview_img" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentTop="true"
            android:paddingTop="12dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/interview_img"
            android:layout_toRightOf="@+id/interview_img"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_tv_black_24dp"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignStart="@+id/imageView2"
            android:layout_below="@+id/imageView2"
            android:text="@string/tech_news"
            android:padding="2dp"
            android:textSize="10dp"
            android:gravity="center"
            android:id="@+id/textView3" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/circle"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            app:srcCompat="@drawable/ic_notifications_active_black_24dp"
            android:id="@+id/imageView3" />

        <TextView
            android:layout_width="64dp"
            android:layout_height="20dp"
            android:textSize="10dp"
            android:gravity="center"
            android:padding="2dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:text="@string/notification"
            android:id="@+id/textView4" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="20dp" />
    </>

    </LinearLayout>










