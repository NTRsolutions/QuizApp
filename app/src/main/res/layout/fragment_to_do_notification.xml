<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dorvis.quizapp.fragments.ToDoNotificationFragment">

    <TextView
        android:text="@string/notify_text"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"

        />

    <ImageView
        android:id="@+id/notify_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="@string/notificationImg"
        android:background="@color/colorPrimary"
        android:clickable="true"
        app:srcCompat="@drawable/ic_notifications_active_black_24dp" android:focusable="true" />
</FrameLayout>
